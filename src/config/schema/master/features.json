                            "format": "checkbox",
                            "options": {
                                "grid_columns": 12
                            }
                        },
                        "showLetUnderOfferBanner": {
                            "type": "boolean",
                            "title": "display Lease Under Offer Banner",
                            "default": true,
                            "format": "checkbox",
                            "options": {
                                "grid_columns": 12
                            }
                        },
                        "showSoldBanner": {
                            "type": "boolean",
                            "title": "display Sold Banner",
                            "default": false,
                            "format": "checkbox",
                            "options": {
                                "grid_columns": 12
                            }
                        },
                        "showSaleAgreedBanner": {
                            "type": "boolean",
                            "title": "display Sale Agreed Banner",
                            "default": false,
                            "format": "checkbox",
                            "options": {
                                "grid_columns": 12
                            }
                        },
                        "showLeasedBanner": {
                            "type": "boolean",
                            "title": "display Leased Banner",
                            "default": false,
                            "format": "checkbox",
                            "options": {
                                "grid_columns": 12
                            }
                        }
                    }
                },

                "childListings": {
                    "type": "object",
                    "title": "Child listings",
                    "format": "grid",
                    "options": {
                        "grid_columns": 12,
                        "disable_edit_json": true,
                        "disable_collapse": true
                    },
                    "properties": {
                        "enableChildListings": {
                            "title": "enable Child listings on parent pages",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox",
                            "options": {
                                "grid_columns": 12
                            }
                        },
                        "limitChildListings": {
                            "type": "string",
                            "title": "Set a limit on child listings results",
                            "default": "10",
                            "format": "string",
                            "options": {
                                "grid_columns": 12
                            }
                        }
                    }
                },

                "displayUseClass": {
                    "title": "Display the UseClass on PDP page",
