                "propertyClustering": {
                    "title": "Enable clustering of all properties",
                    "type": "boolean",
                    "format": "checkbox",
                    "default": true,
                    "options": {
                        "grid_columns": 12
                    }
                },
                "developmentClustering": {
                    "title": "Enable clustering of multiple properties in single locations",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "useCarouselAspectRatioFilter": {
                    "title": "Enable aspect ratio filtering on PDP carousel",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "useSocialWidgets": {
                    "title": "Enable social widgets",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "propertyNavigation": {
                    "title": "Display PDP property nav bar",
                    "type": "boolean",
                    "default": true,
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
