                "enhancedMapList": {
                    "title": "Map-list view property auto-selection",
                    "type": "boolean",
                    "default": true,
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },

                "performance": {
                    "type": "object",
                    "title": "Experimental perfomance settings",
                    "format": "grid",
                    "options": {
                        "grid_columns": 12,
                        "disable_edit_json": true,
                        "disable_collapse": true
                    },
                    "properties": {
                        "useLazyLoad": {
                            "type": "boolean",
                            "title": "Use lazy loading on images in search results",
                            "default": false,
                            "format": "checkbox",
                            "options": {
                                "grid_columns": 4
                            }
                        }
                    }
                },
