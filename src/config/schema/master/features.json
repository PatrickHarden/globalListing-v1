{
    "properties": {
        "features": {
            "type": "object",
            "title": "Enabled features",
            "propertyOrder": 70,
            "options": {
                "grid_columns": 12,
                "disable_edit_json": true,
                "collapsed": true
            },
            "format": "grid",
            "defaultProperties": [
                "searchOnEnter",
                "relatedProperties",
                "propertyClustering",
                "developmentClustering",
                "useCarouselAspectRatioFilter",
                "propertyNavigation",
                "printFavourites",
                "enhancedMapList",
                "propertyBanners"
            ],
            "properties": {
                "enableAuthority": {
                    "title": "Enable Authority field on PDP",
                    "type": "boolean",
                    "format": "checkbox",
                    "default": false,
                    "options": {
                        "grid_columns": 12
                    }
                },
                "carouselStaticQuery": {
                    "title": "Enable staticQuery on featured properties carousel",
                    "type": "boolean",
                    "format": "checkbox",
                    "default": false,
                    "options": {
                        "grid_columns": 12
                    }
                },
                "searchOnEnter": {
                    "title": "Enable submitting search form on enter",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "enableFavourites": {
                    "title": "Enable favourites",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "displayPropertyId": {
                    "title": "Display the PropertyID on Details page",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "displayBuildingAvailableDate": {
                    "title": "Display the building available date in the PDP description block",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "displayBuildingUsageType": {
                    "title": "Display the usage type in the PDP description block",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "displayRelatedListing": {
                    "title": "Display related listing CTA",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
