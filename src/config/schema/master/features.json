                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "displaySizeInSideHeader": {
                    "title": "Display the Size in the side header after the number of bedrooms",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
                },
                "relatedProperties": {
                    "title": "Enable related properties widget on PDP",
                    "type": "boolean",
                    "format": "checkbox",
                    "options": {
                        "grid_columns": 12
                    }
